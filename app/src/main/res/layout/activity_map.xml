<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stillsix.wheresthepartyat.MapActivity">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/gummymap"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_weight="1"
    android:id="@+id/mapView"
    android:onClick="onClick"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="400dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/cityicon"
        android:id="@+id/cityLeadersButton"
        android:onClick="cityLeaders"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/lockicon"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="230dp"
        android:layout_marginTop="160dp"
        android:background="#000000"
        android:id="@+id/lockButton"/>
    <TextView android:id="@+id/yourLocationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/mapText"
        android:padding="5dp"
        android:text="Your Location: Locked"
        android:background="@color/mapBG"
        android:layout_below="@+id/lockButton"
        android:layout_alignRight="@+id/seattleTxt"
        android:layout_alignEnd="@+id/seattleTxt"
        android:onClick="getLocationStatus"/>

    <TextView android:id="@+id/seattleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/mapText"
        android:padding="5dp"
        android:text="Seattle: 5K"
        android:background="@color/mapBG"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="120dp"
        android:layout_marginTop="320dp" />
    <TextView android:id="@+id/sanFranTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/mapText"
        android:padding="5dp"
        android:text="San Fran:15K"
        android:background="@color/mapBG"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="320dp" />
    <TextView android:id="@+id/LATxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/mapText"
        android:padding="5dp"
        android:text="Los Angeles:15K"
        android:background="@color/mapBG"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="120dp" />
</RelativeLayout>
